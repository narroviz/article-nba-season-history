@font-face
    font-family Avenir

body
    padding max(5vw, 1vw); 
    padding-bottom 0em

.wrapper
    position relative
    align-items center
    margin-right 0rem
    margin-left 0rem
    display block

.tooltip
    opacity 0

.bounds-background
    fill #FF00FF11

.rect
    opacity 0.25
    stroke-width 1
    stroke-opacity 1

.season-path
    stroke-opacity 1

.record-label
    font-feature-settings 'tnum' 1
    transition all 0.1s ease-out

.season-label
    font-size 0.36em
    text-anchor end
    font-feature-settings 'tnum' 1
    transition all 0.1s ease-out

.legend-tile
    stroke-opacity 0

.bookend-legend-tile
    stroke-opacity 0

.legend-tick
    stroke black

.voronoi
    fill transparent

.autocomplete
    position: absolute;
    left: 50%;
    margin-right: -50%;
    transform: translate(-50%, -91%)
    font-size: 28px
    pointer-events none
    z-index 10000

.typeahead
    width 200px
    position relative
    opacity 0
    border none
    z-index 10000

input[type=text]
    font-size 28px
    font-family 'Raleway'
    background-color transparent
    width 355px
    opacity 1
    outline-width 0
    text-align center
    border-bottom none

.typeahead.dropdown-menu, span.twitter-typeahead .tt-menu
    min-width 100%
    background white
    border none
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, .16), 0 2px 10px 0 rgba(0, 0, 0, .12)
    border-radius 0
    font-size 1.2rem

span
    &.twitter-typeahead
        .tt-hint
            font-size 0
        .tt-suggestion
            color gray
            cursor pointer
            padding 1rem
            text-transform capitalize
            font-weight 400
        .tt-menu
            max-height 300px
            overflow-y auto

span.twitter-typeahead .active.tt-suggestion,
span.twitter-typeahead .tt-suggestion.tt-cursor,
span.twitter-typeahead .active.tt-suggestion:focus,
span.twitter-typeahead .tt-suggestion.tt-cursor:focus,
span.twitter-typeahead .active.tt-suggestion:hover,
span.twitter-typeahead .tt-suggestion.tt-cursor:hover
    background-color #EEEEEE
    color #4285F4




#scrolly-side .scrolly
    display flex
    margin-right 0rem
    margin-left 0rem
    background-color transparent
    padding min(5vw, 1rem)

    & > *
        flex 1

    article
        max-width 15rem

        .step-intro
            min-height 50vh
            margin-bottom 3rem
            background-color transparent

        .step-outro
            min-height 50vh
            margin-bottom 0rem
            background-color transparent
            transition background-color 250ms ease-in-out
            &:last-of-type
                margin-bottom 0
            &.is-active
                background-color $secondary
            .row 
                display flex
                max-height 30%

            .large-image
                margin auto
                object-fit contain
                max-height 8rem
                max-width 12rem


            .small-image
                object-fit contain
                margin 2%
                max-width 30%
                max-height 5rem

            p
                margin 0
                font-family Avenir
                color black
            h1
                margin 0
                text-align center
                font-weight 400
                color black
                font-size 24px
                font-family "Avenir"
            h2
                margin 0
                text-align center
                font-weight 400
                color black
                set-type-size(large)

        .step
            min-height 50vh
            margin-bottom 3rem
            background-color transparent
            transition background-color 250ms ease-in-out
            &:last-of-type
                margin-bottom 0
            &.is-active
                background-color $secondary
            
            .row 
                display flex
                max-height 30%

            .large-image
                margin auto
                object-fit contain
                max-height 8rem
                max-width 12rem


            .small-image
                object-fit contain
                margin 2%
                max-width 30%
                max-height 5rem

            p
                margin 0
                font-family Avenir
                color black
            h1
                margin 0
                text-align center
                font-weight 400
                color black
                font-size 24px
                font-family "Avenir"
            h2
                margin 0
                text-align center
                font-weight 400
                color black
                set-type-size(large)
                

    figure.sticky
        position sticky
        background transparent
        height 100%
        margin 0
        top 14vh
        left 0

.interactive-wrapper
    position fixed
    overflow scroll
    right 3rem
    height 100vh
    width 19rem
    pointer-events none

.historical-path
    stroke-opacity 1
    stroke-linejoin round
    animation: dash 5s linear alternate infinite;

.historical-area
    stroke-width 0
    stroke none

.line
  fill none
  stroke #222
  stroke-width 2px

button.toggle
    float left
    font-size 11px
    text-align center
    text-decoration none
    color  #838383 /* #130C0E black */
    background-color #e3e3e3 /* #4CAF50 green */
    width 80px
    border none
    padding 4px
    display block
    margin 0px

button.toggle:focus
    outline 0

#toggle-win-pct
    position relative
    border-top-left-radius 8px
    border-bottom-left-radius 8px
    background-color #1b84c911
    border 1px solid #1b84c9
    color #1b84c9
    font-weight bold

#toggle-num-games
    position relative
    border-top-right-radius 8px
    border-bottom-right-radius 8px
    background-color white
    border-top 1px solid #83838344
    border-bottom 1px solid #83838344
    border-right 1px solid #83838344
    color #83838388

#season-history-wrapper
    width: 100%

#top-label
    position: absolute;
    left: 50%;
    margin-right: -50%;
    transform: translate(-50%, -150%)
    font-size: 28px
    border-bottom 2px solid gray

.appendix
    font-family "Avenir"
    margin-top 0
    margin-left min(5vw, 1rem)
    margin-right min(5vw, 1rem)
    margin-bottom 0

.appendix p
    font-size 16px

.appendix h2
    font-weight bold
    font-size:18px

.win-pct-label
    font-family: 'Raleway';
    vertical-align middle

.num-games-label
    font-family: 'Raleway';
    vertical-align middle

.year-label
  font-family 'Raleway'
  font-weight 200px

.tooltip
    width 8.5rem
    font-family "Avenir"
    opacity 0
    left 0
    display block
    position absolute
    text-align center
    padding: 0.4em 0.6em 0.4em 0.6em;
    background: #fff;
    font-size: 16px;
    border: 1px solid #ddd;
    z-index: 10;
    pointer-events: none;
    border-radius: 6px;

.tooltip-year
    margin-bottom: 0.4em;
    font-weight: 600;
    font-size: 16px;
    border-bottom: 1px solid gray

.tooltip-record
    text-align center
    margin-bottom 0.2em

.tooltip-win-pct
    text-align center

#win-pct-label
    font-size 16px
    color #585858

#record-label
    font-size 16px
    color #585858

.mobile-text
    visibility hidden